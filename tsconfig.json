{
  "include": ["src/lib"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    // "sourceMap": true,
    "importHelpers": true,
    "declaration": true,
    "rootDir": "./src/lib",
    "outDir": "./dist",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
